<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - School Book Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/FooterBottom.css" rel="stylesheet"/>    
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/book.jpg" />

</head>
<body>   
    <div id="wrapper"> 
     <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("School Book Market", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                   
                    <li>@Html.ActionLink("Sell Your Book", "Create", "CreateBook")</li>
                    <li>@Html.ActionLink("Books For Sale", "Show", "ShowBooks")</li>
                    <li>@Html.ActionLink("Search", "Contact", "Home")</li>
                    <li>@Html.ActionLink("My Profile", "Contact", "Home")</li>
                    <li><a href="/#contact" class="tab-selected" title="Admin">Contact</a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
     </div>        
    <div class="container body-content">
        @RenderBody()     
    </div>                    
        <footer>           
            <p>www.schoolbookmarket.com &copy; @DateTime.Now.Year  Created By Mihail Tanev</p>
        </footer>          
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
