@model IEnumerable<SchoolBookApplication.Domain.Book>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header-name">
                    @book.Type.Name 
                </h2>

                <p class="pull-right">
                    <a class="btn btn-primary" href="@Url.Action("BookDetails","Book",new {id = book.BookId })">Details</a>
                </p>
            </div>
        </div>
     

        <div class="row">
            <div class="col-sm-6">
                <img width="250" height="280" src="@Url.Action("Image", "Home", new { id = book.ImageId})" class="thumbnail img-responsive" />
            </div>

            <div class="col-md-6">
                <h2 class="text-danger" style="font-family:'AR BLANCA';">Sale Price : @book.SalePrice DKK</h2>
                <h3 class="text-primary" style="text-decoration:line-through;">Original Price : @book.OriginalPrice DKK</h3>
                <div class="bookdetails-wrap">
                    <ul class="bookdetails-wrap-info">
                        <li class="list-group-contact-items"><label>Discount : <span>@((1 - (book.SalePrice / book.OriginalPrice)).ToString("0.00%"))</span></label></li>
                        <li class="list-group-contact-items"><label>You Save : <span>@(book.OriginalPrice - book.SalePrice) DKK</span></label></li>
                        <li class="list-group-contact-items"><label>Category : <span>@book.Type.BookCategory.Name</span></label></li>
                        <li class="list-group-contact-items"><label>Author : <span>@book.Author</span></label></li>
                        <li class="list-group-contact-items"><label>Year : <span>@book.Type.Year</span></label></li>
                        <li class="list-group-contact-items"><label>Condition : <span>@book.AdditionalInformation</span></label></li>
                        <li class="list-group-contact-items"><label>Posted on : <span>@book.ListingDate.ToString(" HH:mm, dd MMMM yyyy")  </span></label></li>

                    </ul>
                </div>


                @*<h3 class="contact-info"><u>Contact Information:</u></h3>
                    <div>
                        <ul class="list-group" style="width:350px;">
                            <li class="list-group-item">Name : <p class="pull-right text-info">@book.Seller.FirstName @book.Seller.LastName</p></li>
                            <li class="list-group-item">Phone : <p class="pull-right text-info">@book.Seller.PhoneNumber</p></li>
                            <li class="list-group-item">Email : <p class="pull-right text-info"><a href="mailto:@book.Seller.Email">@book.Seller.Email</a></p></li>
                            <li class="list-group-item">City : <p class="pull-right text-info">@book.Seller.City</p></li>
                        </ul>
                    </div>*@
                @*<p>
                        <span class="glyphicon glyphicon-chevron-left" style="color:#337ab7"></span>
                        @Html.ActionLink("Go Back", "Show", "ShowBooks")
                    </p>*@
            </div>
        </div>
    }
</div>


