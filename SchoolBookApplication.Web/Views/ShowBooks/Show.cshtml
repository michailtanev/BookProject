@model IEnumerable<SchoolBookApplication.Web.Models.BookViewModel>
@{
    ViewBag.Title = "Show";
}
<h2 class="info"style="margin-left:15px;">Books for Sale</h2>
<hr />
<nav class="navbar navbar-default"style="left:15px;margin-right:30px;">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>        
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sort By <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Price - Low to High</a></li>
                        <li><a href="#">Price - High to Low</a></li>
                        <li><a href="#">Newest Ads</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Programme  <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Computer Science</a></li>
                        <li><a href="#">Multimedia Design</a></li>
                        <li><a href="#">IT Technology</a></li>
                    </ul>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="row">  
        
            @foreach (var book in Model)
            {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    @if (!book.ImageId.Equals(null))
                    {
                    <div class="ribbon"><span>@book.Price <small>kr</small></span></div>
                    <img src="@Url.Action("Image","Home",new { id=book.ImageId })" class="img-responsive" />
                    }
                    <div class="caption" style="margin-top:-15px;">
                        <h3>
                            <a href="@Url.Action("BookDetails","Book",new { book.Id })">@book.Type</a>
                        </h3>
                        @*<p class="pull-right">
                            <a class="btn btn-primary" href="@Url.Action("BookDetails","Book",new { book.Id })">Details</a>
                        </p>*@
                        <p><span class="glyphicon glyphicon-education" style="color:#337ab7"></span> @book.Category</p>
                        <p>@book.ListingDate.ToString("ddd, dd MMM yyyy  hh:mm") </p>
                        @*<h4>Seller : @book.SellerFirstName</h4>*@
                    </div>
                </div>
                <br />
            </div>
            }
        </div>

       
    


